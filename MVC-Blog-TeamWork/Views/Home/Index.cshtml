@{ ViewBag.Title = "Home Page"; }
@model List<MVC_Blog_TeamWork.Models.Post>

<section class="row">
    @foreach (var post in Model)
    {
        <article class="col-md-6">
            <h2 class="title"><a href="Posts/Details/@post.Id">@MVC_Blog_TeamWork.Classes.Utils.CutText(post.Title, 20)</a></h2>
            <div class="about">
                Публикувано
                @if (post.Author != null)
                {
                    @:от
                    <i>@post.Author (@post.Author.UserName)</i>
                }
                на<i>@post.Date</i>
            </div>
            <div class="body">@MVC_Blog_TeamWork.Classes.Utils.CutText(post.Body)</div>
        </article>
    }
</section>



